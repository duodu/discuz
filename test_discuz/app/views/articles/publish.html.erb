<% if flash[:notice] %>
  <div style="color: red">
  	<% flash[:notice].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>
<%= form_for @article, :url => { :action => "publish_submit" } do |f| %>
  <div class="field">
    <%= f.label "Title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Content" %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions"><br />
    <%= f.submit %>
  </div>
<% end %>
<br />
<%= link_to 'Back', :action => "list" %>