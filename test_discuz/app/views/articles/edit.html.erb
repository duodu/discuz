<% if flash[:notice] %>
  <div style="color: red">
  	<% flash[:notice].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>
<%= form_for @article, :url => { :action => "edit_submit" } do |f| %>
	<% if @article.top_id == @article.id %>
		<div class="field">
    		<%= f.label 'Title' %><br />
    		<%= f.text_field :title %>
  		</div>
		<div class="field">
    		<%= f.label 'Content' %><br />
    		<%= f.text_area :content %>
  		</div>
	<% else %>
  		<div class="field">
    		<%= f.label 'Comment' %><br />
    		<%= f.text_area :content %>
  		</div>	
  	<% end %>
  	<div class="actions"><br />
    	<%= f.submit %>
  	</div>
  	<br />
	<%= link_to 'Back', :action => "show", :id => @article.top_id, :num => @num.to_i %>
<% end %>